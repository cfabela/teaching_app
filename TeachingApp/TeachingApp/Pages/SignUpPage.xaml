<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="TeachingApp.Pages.SignUpPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="40" HorizontalOptions="Center">
                <Image Source="logo.png" HeightRequest="100" WidthRequest="100" />
                <Label Text="Welcome to Teachify" FontSize="Medium" TextColor="#707070" />
            </StackLayout>
            <StackLayout Grid.Row="1" Margin="40,0,40,0" VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Email" PlaceholderColor="#707070" x:Name="EntEmail" />
                <Entry Placeholder="Password" PlaceholderColor="#707070" x:Name="EntPassword" />
                <Entry Placeholder="Confirm Password" PlaceholderColor="#707070" x:Name="EntConfirmPassword" />
                <Button Text="Sign Up" BackgroundColor="#340E22" TextColor="White" CornerRadius="20" HeightRequest="40"
                        x:Name= "BtnSignUp" Clicked="BtnSignup_Clicked"/>
                
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
